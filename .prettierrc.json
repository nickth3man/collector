{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": false,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "insertPragma": false,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "ignore",
        "tabWidth": 2,
        "printWidth": 100,
        "bracketSameLine": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "tabWidth": 2,
        "singleQuote": false,
        "printWidth": 100,
        "bracketSpacing": true,
        "semi": true
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "tabWidth": 2,
        "singleQuote": false,
        "printWidth": 100
      }
    },
    {
      "files": "*.less",
      "options": {
        "parser": "less",
        "tabWidth": 2,
        "singleQuote": false,
        "printWidth": 100
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "proseWrap": "always",
        "printWidth": 80
      }
    }
  ]
}
